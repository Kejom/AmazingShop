@using AmazingShop.Utility
@model IEnumerable<OrderHeader> 

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Zamówienia</h2>
        </div>
        <div class="col-6 text-right">
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Numer
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Zamawiający
                    </th>
                    <th>
                        Suma
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td width="10%">@order.Id</td>
                        <td width="20%">@(((OrderStatuses)order.OrderStatus).GetDisplayName())</td>
                        <td width="30%">@order.FullName</td>
                        <td width="20%">@order.FinalOrderTotal zł</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Edit" asp-route-Id="@order.Id" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Brak Zamówień do wyświetlenia</p>
    }
</div>